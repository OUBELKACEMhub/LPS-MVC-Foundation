{# App/templates/dashboard.html.twig #}
{% extends "layouts/base.html.twig" %}

{% block title %}Mon Tableau de Bord - ShopEasy{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">

    {# --- SECTION 1 : EN-TÊTE & SOLDE (US4) --- #}
    <div class="bg-white shadow rounded-lg p-6 mb-8 flex justify-between items-center">
        <div>
            <h1 class="text-2xl font-bold text-gray-800">Bonjour, {{ user.name|capitalize }} !</h1>
            <p class="text-gray-600">Bienvenue sur votre espace fidélité.</p>
        </div>
        
        <div class="text-right">
            <p class="text-sm text-gray-500 uppercase tracking-wide">Solde Actuel</p>
            <div class="text-4xl font-extrabold text-blue-600">
                {{ user.total_points|number_format(0, ',', ' ') }} <span class="text-lg">pts</span>
            </div>
        </div>
    </div>

    {# --- SECTION 2 : ACTIONS RAPIDES --- #}
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
        <div class="bg-gradient-to-r from-purple-500 to-indigo-600 rounded-lg p-6 text-white shadow-lg">
            <h2 class="text-xl font-bold mb-2">Envie de cadeaux ?</h2>
            <p class="mb-4">Échangez vos points contre des bons d'achat et des livraisons gratuites.</p>
            <a href="/rewards" class="inline-block bg-white text-indigo-600 font-bold py-2 px-4 rounded hover:bg-gray-100 transition">
                Voir le catalogue des récompenses
            </a>
        </div>

        <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
            <h2 class="text-xl font-bold text-gray-800 mb-2">Comment gagner plus ?</h2>
            <p class="text-gray-600">Vous gagnez <strong>10 points</strong> pour chaque tranche de 100$ d'achat.</p>
            <div class="mt-4 text-sm text-gray-500">
                <i class="fas fa-shopping-cart"></i> Continuez vos achats sur ShopEasy !
            </div>
        </div>
    </div>

    {# --- SECTION 3 : HISTORIQUE DES TRANSACTIONS (US6) --- #}
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <h3 class="text-lg font-bold text-gray-800">Historique des points</h3>
        </div>

        <div class="overflow-x-auto">
            <table class="w-full text-left border-collapse">
                <thead>
                    <tr class="bg-gray-50 text-gray-600 text-sm uppercase">
                        <th class="px-6 py-3 border-b">Date</th>
                        <th class="px-6 py-3 border-b">Description</th>
                        <th class="px-6 py-3 border-b">Type</th>
                        <th class="px-6 py-3 border-b text-right">Montant</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    {% for transaction in transactions %}
                        <tr class="hover:bg-gray-50 border-b last:border-0">
                            {# Date formatée (Filtre Twig) #}
                            <td class="px-6 py-4">
                                {{ transaction.created_at|date("d/m/Y H:i") }}
                            </td>
                            
                            <td class="px-6 py-4">
                                {{ transaction.description }}
                            </td>
                            
                            {# Logique d'affichage selon le type (earned/redeemed) #}
                            <td class="px-6 py-4">
                                {% if transaction.type == 'earned' %}
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                        Gagné
                                    </span>
                                {% elseif transaction.type == 'redeemed' %}
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                        Dépensé
                                    </span>
                                {% else %}
                                    <span class="px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                                        Expiré
                                    </span>
                                {% endif %}
                            </td>

                            <td class="px-6 py-4 text-right font-bold">
                                {% if transaction.type == 'earned' %}
                                    <span class="text-green-600">+{{ transaction.amount }}</span>
                                {% else %}
                                    <span class="text-red-600">-{{ transaction.amount }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    {# Cas où il n'y a pas encore de transactions #}
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-6 py-8 text-center text-gray-500">
                                Aucune transaction pour le moment. Commencez à acheter pour gagner des points !
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

</div>
{% endblock %}