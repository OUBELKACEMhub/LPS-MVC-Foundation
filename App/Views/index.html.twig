{% extends "layouts/base.html.twig" %}

{% block title %}ShopEasy - Boutique{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-10 text-center">
        <h1 class="text-3xl font-bold text-gray-900">Nos Produits</h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
        {% for product in products %}
            <div class="bg-white rounded-xl shadow-md border border-gray-100 p-5 flex flex-col hover:scale-105 transition-transform duration-300">
                
                <div class="bg-indigo-50 rounded-lg h-48 mb-4 flex items-center justify-center text-5xl">
                    {{ product.icon }}
                </div>

                <div class="flex-grow">
                    <h3 class="text-lg font-bold text-gray-800">{{ product.name }}</h3>
                    <p class="text-sm text-gray-500 mt-2 mb-4 line-clamp-2">{{ product.description }}</p>
                </div>

                <div class="mt-auto">
                    <div class="flex items-center justify-between mb-4">
                        <span class="text-2xl font-bold text-indigo-600">
                            {{ product.price|number_format(2, '.', ' ') }} $
                        </span>
                        <div class="flex items-center gap-2">
                             <label class="text-xs text-gray-400">Qty:</label>
                             <input type="number" name="quantity" value="1" min="1" class="w-12 p-1 border rounded text-center text-sm">
                        </div>
                    </div>
                    
                    <form action="/Loyalty%20Points%20System/App/public/cart/add" method="POST">
                        <input type="hidden" name="product_id" value="{{ product.id }}">
                        <button type="submit" class="w-full bg-indigo-600 text-white py-2 rounded-lg font-semibold hover:bg-indigo-700 transition-colors">
                            Ajouter au panier
                        </button>
                    </form>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}